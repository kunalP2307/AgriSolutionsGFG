<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/greenGrey"
android:orientation="vertical">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/darkGreen"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito"
                android:text="Already Have an account?"
                android:textColor="@color/white"
                android:textSize="30dp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/farmer"

                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/ic_wave"
                android:layout_gravity="end"/>

            <View
                android:id="@+id/abc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:background="@drawable/ic_wave" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="25dp">

        <EditText
            android:drawableStart="@drawable/ic_email"
            android:id="@+id/text_log_email"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/custome_input"
            android:drawablePadding="12dp"
            android:fontFamily="@font/nunito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="@dimen/_18sdp"
            android:hint="Email" />

        <EditText
            android:drawablePadding="12dp"

            android:drawableStart="@drawable/ic_password"
            android:id="@+id/text_log_password"
            android:padding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:background="@drawable/custome_input"
            android:layout_width="match_parent"
            android:fontFamily="@font/nunito"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="@dimen/_18sdp"
            android:hint="Password"
            />


        <CheckBox
            android:id="@+id/show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/pg1"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:text="Sign In"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/nbold"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:id="@+id/label_forgot_pass"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/white"
            android:text="Forgot Password"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_sign_up"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-1sp"
            android:backgroundTint="@color/white"
            android:text="Not a user? Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </LinearLayout>

</FrameLayout>

</LinearLayout>